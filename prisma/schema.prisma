// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Feedback {
  id          Int   @id @default(autoincrement())
  name        String
  response    String
}
model Club {
  id          Int   @id @default(autoincrement())  @unique
  name        String
  description String
  creator     String
  email       String
  image       String
  createdAt   DateTime @default(now())
}
model Post {
  id        Int       @id @default(autoincrement()) @unique
  title     String
  image     String
  author    String
  content   String
  likes     Int       @default(0)
  comments  String[]  @default([])
  owner     String
}